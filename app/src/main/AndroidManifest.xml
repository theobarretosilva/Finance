<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_finance"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_finance_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Finance">
        <activity
            android:name=".activities.ProfilePage"
            android:exported="false" />
        <activity
            android:name=".activities.SecondSignupPage"
            android:exported="false" />
        <activity
            android:name=".activities.MainPage"
            android:colorMode="wideColorGamut"
            android:exported="true" />
        <activity
            android:name=".activities.SignupPage"
            android:colorMode="wideColorGamut"
            android:exported="true" />
        <activity
            android:name=".activities.LoginPage"
            android:colorMode="wideColorGamut"
            android:exported="true" />
        <activity
            android:name=".activities.InitialPage"
            android:colorMode="wideColorGamut"
            android:exported="true" />
        <activity
            android:name=".activities.SplashPage"
            android:colorMode="wideColorGamut"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>